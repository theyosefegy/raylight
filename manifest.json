{
	"manifest_version": 3,
	"name": "RayLight",
	"version": "0.1",

	"icons": {
		"48": "./images/star.png"
	},

	"content_scripts": [
		{
			"js": ["/dist/bundle.js"],
			"css": ["/css/style.css"],
			"matches": ["<all_urls>"]
		}
	],

	"commands": {
		"reload": {
			"description": "reload extension",
			"suggested_key": {
				"default": "Ctrl+Shift+H"
			}
		}
	}
}
